{
  "manifest_version": 2,

  "name": "GameofSpoils: Lite",
  "short_name": "GameOfSpoilsLite",
  "description": "A lighter version of the Game of Thrones spoiler blocking plugin for your Facebook, Twitter, Reddit, and Google News feeds.",
  "version": "1.0.0",

  "browser_action": {
    "default_icon": "assets/icons/icon128.png",
    "default_popup": "popup.html",
    "default_title": "Game of Spoilers Lite"
  },

  "icons": {
    "16":  "assets/icons/icon16.png",
    "19":  "assets/icons/icon16.png",
    "48":  "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["scripts/lib/helpers.js", "scripts/lib/settings.js", "scripts/background.js"]
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.mozilla.org/*",
        "*://asdf.com/*",
        "*://feedly.com/*",
        "*://gizmodo.co.uk/*",
        "*://gizmodo.com/*",
        "*://news.google.co.in/*",
        "*://news.google.co.uk/*",
        "*://news.google.com/*",
        "*://plus.google.com/*",
        "*://twitter.com/*",
        "*://www.avclub.com/*",
        "*://www.buzzfeed.com/*",
        "*://www.facebook.com/*",
        "*://*.reddit.com/*",
        "*://www.tumblr.com/*",
        "*://www.youtube.com/*"
      ],
      "css": ["styles/content.css"],
      "js":  ["scripts/vendor/jquery.min.js", "scripts/lib/helpers.js", "scripts/lib/settings.js", "scripts/content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
